<!-- views/inventory/management.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Inventory Management</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h1>Inventory Management</h1>

  <!-- Flash Messages -->
  <% if (messages && messages.notice) { %>
    <div class="alert alert-info">
      <% messages.notice.forEach(function(msg) { %>
        <p><%= msg %></p>
      <% }); %>
    </div>
  <% } %>

  <!-- Management Links -->
  <nav>
    <ul>
      <li><a href="/inv/add-classification">Add New Classification</a></li>
      <li><a href="/inv/add-inventory">Add New Inventory Item</a></li>
    </ul>
  </nav>
</body>
</html>
