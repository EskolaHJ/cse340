<!-- views/inventory/management.ejs -->

  <h1>Inventory Management</h1>

  <!-- Flash Messages -->
  <% if (messages && messages.notice) { %>
    <div class="alert alert-info">
      <% messages.notice.forEach(function(msg) { %>
        <p><%= msg %></p>
      <% }); %>
    </div>
  <% } %>

  <!-- Management Links -->
  <nav>
    <ul>
      <li><a href="/inv/add-classification">Add New Classification</a></li>
      <li><a href="/inv/add-inventory">Add New Inventory Item</a></li>
    </ul>
  </nav>

<!-- New Content for managing Inventory -->
 <h2>Manage Inventory</h2>
 <p>Select a classification from the list below to view the corresponding inventory items.</p>

 <!-- Render the classification select list -->
  <%- classificationSelect %>

  <!-- Empty table for inventory display via JavaScript -->
   <table id="inventoryDisplay"></table>

   <!-- Warning if JavaScript is disabled -->
    <noscript>JavaScript must be enable to use this page.</noscript>
    <!-- JavaScript file that will manage inventory display -->
     <script src="../../js/inventory.js"></script>