<% layout('layout') %>

<h1><%= title %></h1>

<main>
  <form action="/inv/update" method="post">
    <!-- Hidden input to send the inventory id -->
    <input type="hidden" name="inv_id" value="<%= inv_id %>">

    <div>
      <label for="inv_make">Make:</label>
      <input type="text" id="inv_make" name="inv_make" value="<%= inv_make %>" required>
    </div>
    <div>
      <label for="inv_model">Model:</label>
      <input type="text" id="inv_model" name="inv_model" value="<%= inv_model %>" required>
    </div>
    <div>
      <label for="inv_year">Year:</label>
      <input type="text" id="inv_year" name="inv_year" value="<%= inv_year %>" required>
    </div>
    <div>
      <label for="inv_description">Description:</label>
      <textarea id="inv_description" name="inv_description" required><%= inv_description %></textarea>
    </div>
    <div>
      <label for="inv_image">Image URL:</label>
      <input type="text" id="inv_image" name="inv_image" value="<%= inv_image %>" required>
    </div>
    <div>
      <label for="inv_thumbnail">Thumbnail URL:</label>
      <input type="text" id="inv_thumbnail" name="inv_thumbnail" value="<%= inv_thumbnail %>" required>
    </div>
    <div>
      <label for="inv_price">Price:</label>
      <input type="text" id="inv_price" name="inv_price" value="<%= inv_price %>" required>
    </div>
    <div>
      <label for="inv_miles">Miles:</label>
      <input type="text" id="inv_miles" name="inv_miles" value="<%= inv_miles %>" required>
    </div>
    <div>
      <label for="inv_color">Color:</label>
      <input type="text" id="inv_color" name="inv_color" value="<%= inv_color %>" required>
    </div>
    <div>
      <label for="classification_id">Classification:</label>
      <select name="classification_id" id="classification_id">
        <%- classificationSelect %>
      </select>
    </div>
    <div>
      <input type="submit" value="Update Vehicle">
    </div>
  </form>
</main>
